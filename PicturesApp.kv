#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

FloatLayout:
    canvas:
        opacity: 0.5
        Color:
            rgb: 1, 1, 1, 0.2
        Rectangle:
            source: 'background.jpg'
            size: self.size
            #color: 1, 1, 1, 0.2

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Image:
            size_hint: None, None
            size: 24, 24
            source: 'kivy-icon-24.png'
        Label:
            height: 24
            text_size: self.width, None
            color: (1, 1, 1, .8)
            text: 'Your setting time: %s is outÔºÅTake a break!' % kivy.__version__

    StackLayout:
        padding: 10
        spacing: 10
        size_hint: .2, .1
        pos_hint: {'top': .95}
        height: 44
        width: 60
        MyImage:
            source: 'button.png'
            #size: self.size
            #color: (1, 0.65, 0, .8)
            y: self.parent.y + self.parent.height - 200
            x: self.parent.x
            #text: 'get music'
        #Label:
            #text: 'get music'
            #size_hint_x: None
            #size_hint_y: None
            
            

<Picture>:
    # each time a picture is created, the image can delay the loading
    # as soon as the image is loaded, ensure that the center is changed
    # to the center of the screen.
    on_size: self.center = win.Window.center
    size: image.size
    size_hint: None, None
    
    Image:
        id: image
        source: root.source

        # create initial image to be 400 pixels width
        size: 400, 400 / self.image_ratio

        # add shadow background
        canvas.before:
            Color:
                rgba: 1,1,1,1
            BorderImage:
                source: 'shadow32.png'
                border: (36,36,36,36)
                size:(self.width+72, self.height+72)
                pos: (-36,-36)